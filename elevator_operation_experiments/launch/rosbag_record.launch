<launch>
    <arg name="ROSBAG_FILE" />

    <node
        pkg="rosbag"
        type="record"
        name="elevator_operation_rosbag_record"
        output="screen"
        args="-O $(arg ROSBAG_FILE)
        /camera/depth_registered/points
        /head_camera/depth_registered/points
        /rosout
        /tf
        /tf_static
        /map
        /odom
        /odom_combined
        /scan
        /base_scan
        /elevator_operation/elevator_door_points
        /elevator_door_opening_checker/output
        /elevator_detection_door_detector_extract_indices/output
        /elevator_accel
        /elevator_accel_filtered
        /elevator_altitude
        /elevator_state_publisher/current_floor
        /elevator_state_publisher/elevator_movement
        /elevator_state_publisher/rest_elevator
        /spinal/imu
        /spinal/baro
        /lowpass_filter/output
        /change_floor_server/input
        "
        />
</launch>
